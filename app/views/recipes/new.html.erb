<% if @recipe.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <h4 class="alert-heading"><%= pluralize(@recipe.errors.count, "errors") %></h4>
    <p><%= pluralize(@user.errors.count, "errors") %> prohibited this object from being saved: not successfully</p>
    <hr>
    <p class="mb-0">
      <% @recipe.errors.full_messages.each do |massage| %>
        <li><%= massage %></li>
      <% end %>
    </p>
  </div>
<% end %>

<div class="container mt-5">
  <div class="row">
    <div class="col-6 mx-auto">
      <h2>新規投稿</h2>
      <%= form_with model:@recipe, local:true do |f| %>
        <div class="form-group">
          <label>レシピ名</label>
          <%= f.text_field :title, class: 'from-cotrol' %>
        </div>
        <div class="form-group">
          <label>作り方</label>
          <%= f.text_area :body, class: 'from-cotrol' %>
        </div>
        <div>
          <%= f.submit class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>